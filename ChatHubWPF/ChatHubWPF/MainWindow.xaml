<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatHubWPF"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" x:Class="ChatHubWPF.MainWindow"
        mc:Ignorable="d"
        Title="ChatHub" Height="450" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" Icon="Images/Favicon.png">
    <Window.Foreground>
        <ImageBrush/>
    </Window.Foreground>
    <Grid OverridesDefaultStyle="True" Margin="0,0,0,-15">
        <Grid.Background>
            <ImageBrush ImageSource="Images/RegistrationBackground.png"/>
        </Grid.Background>

        <Grid HorizontalAlignment="Left" Height="60" VerticalAlignment="Top" Width="800">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF4E525B" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Image HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="50" Margin="744,6,0,0" Source="Images/close-button-png-26.png" MouseLeftButtonDown="Image_MouseLeftButtonDown" RenderTransformOrigin="2.023,-0.566" Cursor="Hand"/>
            <telerik:Label Content="ChatHub" HorizontalAlignment="Left" VerticalAlignment="Top" Height="68" Margin="64,-4,0,-4" Width="202" FontFamily="Algerian" FontSize="40">
                <telerik:Label.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFABF50B" Offset="0.607"/>
                        <GradientStop Color="#FFDE0C0C"/>
                    </LinearGradientBrush>
                </telerik:Label.Foreground>
            </telerik:Label>
            <Image HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="50" RenderTransformOrigin="0.885,0.81" Source="Images/Favicon.png" Margin="6,6,0,0"/>
        </Grid>
        <telerik:Label Content="Sign In" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="77,93,0,0" Height="80" Width="223" FontFamily="Jokerman" FontSize="50" FontWeight="Bold">
            <telerik:Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="Red" Offset="0.56"/>
                </LinearGradientBrush>
            </telerik:Label.Foreground>
        </telerik:Label>
        <telerik:RadWatermarkTextBox x:Name="TextBox1" HorizontalAlignment="Left" Height="60" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="180" Margin="77,178,0,0" CurrentText="Username" Foreground="White" FontSize="15" FontWeight="Bold">
            <telerik:RadWatermarkTextBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.891"/>
                    <GradientStop Color="White"/>
                </LinearGradientBrush>
            </telerik:RadWatermarkTextBox.Background>
        </telerik:RadWatermarkTextBox>
        <telerik:RadPasswordBox x:Name="PasswordBox1" HorizontalAlignment="Left" Height="60" Password="password" TextWrapping="Wrap" Text="RadPasswordBox" VerticalAlignment="Top" Width="180" WatermarkContent="Enter password" Margin="77,242,0,0" RenderTransformOrigin="0.675,0.789" CurrentText="&quot;&quot;" Foreground="White" FontSize="15" FontWeight="Bold">
            <telerik:RadPasswordBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.891"/>
                    <GradientStop Color="White"/>
                </LinearGradientBrush>
            </telerik:RadPasswordBox.Background>
        </telerik:RadPasswordBox>
        <telerik:RadButton Content="Log in" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="180" RenderTransformOrigin="1.571,5.386" Margin="77,322,0,0" FontSize="25" FontFamily="Elephant" Foreground="#FFFFF300" Click="RadButton_Click">
            <telerik:RadButton.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="#FF454285" Offset="0.603"/>
                    <GradientStop Color="#FFADADAD" Offset="0.845"/>
                    <GradientStop Color="#FF0B00F3" Offset="0.339"/>
                </LinearGradientBrush>
            </telerik:RadButton.Background>
        </telerik:RadButton>
        <telerik:Label Content="Sign Up" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="450,90,0,0" Height="81" Width="277" FontFamily="Jokerman" FontSize="50" FontWeight="Bold">
            <telerik:Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="#FF00FF17" Offset="0.549"/>
                </LinearGradientBrush>
            </telerik:Label.Foreground>
        </telerik:Label>
        <telerik:RadWatermarkTextBox x:Name="TextBox2" HorizontalAlignment="Left" Height="43" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Margin="574,176,0,0" CurrentText="Username" Text="Name" Foreground="White" FontSize="15" FontWeight="Bold">
            <telerik:RadWatermarkTextBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.891"/>
                    <GradientStop Color="White"/>
                </LinearGradientBrush>
            </telerik:RadWatermarkTextBox.Background>
        </telerik:RadWatermarkTextBox>
        <telerik:Label Content="Name" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="3.75,3.818" Margin="450,176,0,0" Height="43" Width="94" FontWeight="Bold" FontSize="20" Foreground="Black"/>
        <telerik:RadWatermarkTextBox x:Name="TextBox3" HorizontalAlignment="Left" Height="43" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Margin="574,224,0,0" CurrentText="Username" Text="Email" Foreground="White" FontSize="15" FontWeight="Bold">
            <telerik:RadWatermarkTextBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.891"/>
                    <GradientStop Color="White"/>
                </LinearGradientBrush>
            </telerik:RadWatermarkTextBox.Background>
        </telerik:RadWatermarkTextBox>
        <telerik:Label Content="Email" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="3.75,3.818" Margin="450,224,0,0" Height="43" Width="119" FontWeight="Bold" FontSize="20" Foreground="Black"/>
        <telerik:RadWatermarkTextBox x:Name="TextBox4" HorizontalAlignment="Left" Height="43" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Margin="574,278,0,0" CurrentText="Username" Text="Username" Foreground="White" FontSize="15" FontWeight="Bold">
            <telerik:RadWatermarkTextBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.891"/>
                    <GradientStop Color="White"/>
                </LinearGradientBrush>
            </telerik:RadWatermarkTextBox.Background>
        </telerik:RadWatermarkTextBox>
        <telerik:Label Content="Username" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="3.75,3.818" Margin="450,278,0,0" Height="43" Width="119" FontWeight="Bold" FontSize="20" Foreground="Black"/>
        <telerik:Label Content="Password" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="3.75,3.818" Margin="450,326,0,0" Height="43" Width="119" FontWeight="Bold" FontSize="20" Foreground="Black"/>
        <telerik:RadButton Content="Registration" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="304" RenderTransformOrigin="1.571,5.386" Margin="450,392,0,0" FontSize="30" FontFamily="Cooper Black" Click="RadButton_Click_1">
            <telerik:RadButton.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="Red" Offset="0.193"/>
                </LinearGradientBrush>
            </telerik:RadButton.Foreground>
            <telerik:RadButton.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF454285" Offset="0.397"/>
                    <GradientStop Color="#FF0B00F3" Offset="0.661"/>
                </LinearGradientBrush>
            </telerik:RadButton.Background>
        </telerik:RadButton>
        <telerik:RadPasswordBox x:Name="PasswordBox2" HorizontalAlignment="Left" Height="43" Password="password" TextWrapping="Wrap" Text="RadPasswordBox" VerticalAlignment="Top" Width="180" WatermarkContent="Enter password" Margin="574,331,0,0" Foreground="White" FontSize="15" FontWeight="Bold">
            <telerik:RadPasswordBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.891"/>
                    <GradientStop Color="White"/>
                </LinearGradientBrush>
            </telerik:RadPasswordBox.Background>
        </telerik:RadPasswordBox>
    </Grid>
</Window>
